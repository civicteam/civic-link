{
  "name": "@civic/civic-theme",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "preview": "vite preview",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\"",
    "lint": "eslint -c .eslintrc.cjs '{src,test}/**/*.{ts,tsx}'",
    "lint:fix": "eslint -c .eslintrc.cjs --fix '{src,test}/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@civic/shared-tailwind": "^1.0.1",
    "@headlessui/react": "^1.6.0",
    "@heroicons/react": "^2.0.11",
    "framer-motion": "6.2.4",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "styled-components": "^5.3.5",
    "twin.macro": "^2.8.2",
    "vite-plugin-svgr": "^2.2.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.8",
    "json": "^11.0.0",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "typed-css-modules": "^0.7.2",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-babel-macros": "^1.0.6",
    "vite-plugin-dts": "^1.4.1",
    "vite-plugin-libcss": "^1.0.5"
  },
  "peerDependencies": {
    "react": "^16.8.0 || 17.x",
    "react-dom": "^16.8.0 || 17.x"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/@civic/civic-theme.umd.js",
  "module": "./dist/@civic/civic-theme.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/@civic/civic-theme.es.js",
      "require": "./dist/@civic/civic-theme.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "babelMacros": {
    "twin": {
      "config": "./tailwind.config.cjs",
      "preset": "styled-components"
    }
  }
}
